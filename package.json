{
  "name": "vscode-arduino-tools",
  "private": true,
  "version": "0.0.2-beta.4",
  "publisher": "arduino",
  "license": "Apache-2.0",
  "author": "Arduino SA",
  "description": "Arduino Tools extension for VS Code",
  "main": "./dist/bundle",
  "engines": {
    "vscode": "^1.46.0"
  },
  "scripts": {
    "prepare": "yarn clean && yarn compile && yarn lint && yarn webpack && yarn package",
    "clean": "rimraf ./lib ./dist ./build-artifacts",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "webpack --config ./configs/webpack.config.js --watch",
    "webpack": "webpack --config ./configs/webpack.config.js",
    "package": "mkdirp build-artifacts && vsce package --out ./build-artifacts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arduino/vscode-arduino-language-server"
  },
  "bugs": {
    "url": "https://github.com/arduino/vscode-arduino-language-server/issues"
  },
  "devDependencies": {
    "@types/node": "^14.18.22",
    "@types/vscode": "^1.41.0",
    "@typescript-eslint/eslint-plugin": "^4.8.0",
    "@typescript-eslint/parser": "^4.8.0",
    "copy-webpack-plugin": "^6.1.0",
    "eslint": "^7.9.0",
    "mkdirp": "^1.0.4",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4",
    "ts-loader": "^9.3.1",
    "vsce": "^1.66.0",
    "vscode": "^1.1.33",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-permissions-plugin": "^1.0.7"
  },
  "dependencies": {
    "@types/deep-equal": "^1.0.1",
    "async-mutex": "^0.3.0",
    "deep-equal": "^2.0.3",
    "deepmerge": "^4.2.2",
    "globby": "^13.1.2",
    "path": "^0.12.7",
    "vscode-languageclient": "^6.1.3",
    "web-request": "^1.0.7"
  },
  "keywords": [
    "arduino",
    "iot",
    "ino",
    "IntelliSense"
  ],
  "files": [
    "src",
    "lib",
    "syntaxes",
    "languages"
  ],
  "categories": [
    "Programming Languages",
    "Formatters",
    "Debuggers"
  ],
  "galleryBanner": {
    "color": "#005c5f",
    "theme": "light"
  },
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:ino",
    "onCommand:arduino.debug.start",
    "onCommand:arduino.languageserver.start",
    "onCommand:arduino.languageserver.stop",
    "onCommand:arduino.languageserver.restart"
  ],
  "contributes": {
    "languages": [
      {
        "id": "ino",
        "aliases": [
          "INO",
          "Ino",
          "ino"
        ],
        "extensions": [
          ".ino",
          ".c",
          ".cpp",
          ".h",
          ".hpp",
          ".pde"
        ],
        "configuration": "./languages/ino.language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ino",
        "scopeName": "source.ino",
        "path": "./syntaxes/ino.tmGrammar.json"
      }
    ],
    "commands": [
      {
        "command": "arduino.languageserver.start",
        "title": "Start Language Server",
        "category": "Arduino"
      },
      {
        "command": "arduino.languageserver.stop",
        "title": "Stop Language Server",
        "category": "Arduino"
      },
      {
        "command": "arduino.cli.verify",
        "title": "Verify",
        "category": "Arduino"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "arduino.languageserver.start",
          "when": "discoveredSketches"
        },
        {
          "command": "arduino.languageserver.stop",
          "when": "inoLSReady && discoveredSketches"
        },
        {
          "command": "arduino.cli.verify",
          "when": "discoveredSketches"
        }
      ]
    },
    "configuration": {
      "title": "Arduino Tools",
      "properties": {
        "arduinoTools.ide2Path": {
          "type": "string",
          "description": "Absolute path to the Arduino IDE2 installation. This is required to use the Arduino CLI, language server, and other binaries from the IDE2"
        }
      }
    }
  }
}
